<section id="inicio" class="relative min-h-screen flex items-center overflow-hidden bg-linear-to-br from-dark-900 via-primary-900 to-primary-800">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
          <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="0.5"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
  </div>

  <!-- Gradient Orbs -->
  <div class="absolute top-20 right-10 w-96 h-96 bg-primary-500/20 rounded-full blur-3xl"></div>
  <div class="absolute bottom-20 left-10 w-72 h-72 bg-accent-400/10 rounded-full blur-3xl"></div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 pb-16">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20 mb-6">
          <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
          <span class="text-sm text-white/90 font-medium">Presupuesto gratuito en 24h</span>
        </div>
        
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-heading font-extrabold text-white leading-tight mb-6">
          Tu ingeniería de <span class="text-transparent bg-clip-text bg-linear-to-r from-accent-400 to-accent-500">confianza</span>
        </h1>
        
        <p class="text-lg sm:text-xl text-blue-100/80 max-w-xl mx-auto lg:mx-0 mb-8 leading-relaxed">
          Certificados Energéticos <strong class="text-white">(CEE)</strong>, Boletines Eléctricos <strong class="text-white">(CIE)</strong>, instalaciones y mucho más. Soluciones profesionales para <strong class="text-white">empresas y particulares</strong>.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-10">
          <a href="#contacto" class="inline-flex items-center justify-center px-8 py-4 bg-accent-400 text-dark-900 text-lg font-bold rounded-xl hover:bg-accent-500 transition-all duration-300 shadow-lg shadow-accent-400/25 hover:shadow-xl hover:shadow-accent-400/30 hover:-translate-y-1">
            Solicitar presupuesto gratis
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 ml-2">
              <path d="M5 12h14"/>
              <path d="m12 5 7 7-7 7"/>
            </svg>
          </a>
          <a href="tel:621319662" class="inline-flex items-center justify-center px-8 py-4 bg-white/10 backdrop-blur-sm text-white text-lg font-semibold rounded-xl border border-white/20 hover:bg-white/20 transition-all duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 mr-2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            Llámanos: 621 319 662
          </a>
        </div>

        <!-- Trust Badges -->
        <div class="flex flex-wrap gap-6 justify-center lg:justify-start">
          <div class="flex items-center gap-2 text-blue-200/70">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-green-400">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              <path d="m9 12 2 2 4-4"/>
            </svg>
            <span class="text-sm font-medium">Ingenieros colegiados</span>
          </div>
          <div class="flex items-center gap-2 text-blue-200/70">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-accent-400">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
            <span class="text-sm font-medium">Respuesta en 24h</span>
          </div>
          <div class="flex items-center gap-2 text-blue-200/70">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-blue-300">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
            <span class="text-sm font-medium">Empresas y particulares</span>
          </div>
        </div>
      </div>

      <!-- Hero Visual -->
      <div class="hidden lg:flex justify-center">
        <div class="relative">
          <!-- Main Card -->
          <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-3xl p-8 max-w-md">
            <div class="space-y-6">
              <!-- Service Cards Preview -->
              <div class="bg-white/10 rounded-2xl p-5 border border-white/10">
                <div class="flex items-center gap-4 mb-3">
                  <div class="w-12 h-12 bg-accent-400/20 rounded-xl flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#facc15" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6">
                      <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-white font-semibold">Certificado Energético (CEE)</p>
                    <p class="text-blue-200/60 text-sm">Obligatorio para venta y alquiler</p>
                  </div>
                </div>
                <div class="h-2 bg-green-400/30 rounded-full overflow-hidden">
                  <div class="h-full w-4/5 bg-green-400 rounded-full"></div>
                </div>
                <p class="text-green-400 text-xs mt-1 font-medium">Más solicitado</p>
              </div>

              <div class="bg-white/10 rounded-2xl p-5 border border-white/10">
                <div class="flex items-center gap-4 mb-3">
                  <div class="w-12 h-12 bg-blue-400/20 rounded-xl flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#60a5fa" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6">
                      <path d="M13 2 3 14h9l-1 8 10-12h-9l1-8z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-white font-semibold">Boletín Eléctrico (CIE)</p>
                    <p class="text-blue-200/60 text-sm">Certificación de tu instalación</p>
                  </div>
                </div>
                <div class="h-2 bg-blue-400/30 rounded-full overflow-hidden">
                  <div class="h-full w-3/4 bg-blue-400 rounded-full"></div>
                </div>
                <p class="text-blue-400 text-xs mt-1 font-medium">Alta demanda</p>
              </div>

              <div class="bg-white/10 rounded-2xl p-5 border border-white/10">
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 bg-purple-400/20 rounded-xl flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#c084fc" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6">
                      <circle cx="12" cy="12" r="5"/>
                      <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/>
                    </svg>
                  </div>
                  <div>
                    <p class="text-white font-semibold">Instalación Fotovoltaica</p>
                    <p class="text-blue-200/60 text-sm">Ahorra hasta un 70% en luz</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating badges -->
          <div class="absolute -top-4 -right-4 bg-green-500 text-white text-sm font-bold px-4 py-2 rounded-full shadow-lg animate-bounce">
            Presupuesto gratis
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-white/50">
    <span class="text-xs font-medium tracking-widest uppercase">Descubre más</span>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 animate-bounce">
      <path d="M12 5v14"/>
      <path d="m19 12-7 7-7-7"/>
    </svg>
  </div>
</section>
