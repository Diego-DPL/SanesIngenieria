<section id="contacto" class="py-20 lg:py-28 bg-gradient-to-br from-dark-900 via-primary-900 to-primary-800 relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-10">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="contactGrid" width="60" height="60" patternUnits="userSpaceOnUse">
          <circle cx="30" cy="30" r="1" fill="white"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#contactGrid)" />
    </svg>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-4 py-1.5 bg-white/10 text-white text-sm font-semibold rounded-full mb-4 border border-white/20">Contacto</span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-heading font-extrabold text-white mb-6">
        Solicita tu <span class="text-accent-400">presupuesto gratuito</span>
      </h2>
      <p class="text-lg text-blue-100/70">Rellena el formulario y recibirás un presupuesto sin compromiso en menos de 24 horas. También puedes llamarnos o enviarnos un email.</p>
    </div>

    <div class="grid lg:grid-cols-5 gap-12">
      <!-- Contact Info -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Phone -->
        <a href="tel:621319662" class="flex items-start gap-4 group">
          <div class="w-14 h-14 bg-white/10 backdrop-blur-sm rounded-2xl flex items-center justify-center border border-white/20 shrink-0 group-hover:bg-white/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6 text-accent-400">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
          </div>
          <div>
            <p class="text-white font-semibold text-lg group-hover:text-accent-400 transition-colors">621 319 662</p>
            <p class="text-blue-200/60 text-sm">Lunes a Viernes, 9:00 - 19:00</p>
          </div>
        </a>

        <!-- Email -->
        <a href="mailto:sanes.ing@gmail.com" class="flex items-start gap-4 group">
          <div class="w-14 h-14 bg-white/10 backdrop-blur-sm rounded-2xl flex items-center justify-center border border-white/20 shrink-0 group-hover:bg-white/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6 text-accent-400">
              <rect width="20" height="16" x="2" y="4" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
          </div>
          <div>
            <p class="text-white font-semibold text-lg group-hover:text-accent-400 transition-colors">sanes.ing@gmail.com</p>
            <p class="text-blue-200/60 text-sm">Respondemos en menos de 24h</p>
          </div>
        </a>

        <!-- WhatsApp -->
        <a href="https://wa.me/34621319662" target="_blank" rel="noopener noreferrer" class="flex items-start gap-4 group">
          <div class="w-14 h-14 bg-green-500/20 backdrop-blur-sm rounded-2xl flex items-center justify-center border border-green-400/30 shrink-0 group-hover:bg-green-500/30 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#22c55e" class="w-6 h-6">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </div>
          <div>
            <p class="text-white font-semibold text-lg group-hover:text-green-400 transition-colors">WhatsApp</p>
            <p class="text-blue-200/60 text-sm">Escríbenos por WhatsApp</p>
          </div>
        </a>

        <!-- Trust elements -->
        <div class="pt-8 border-t border-white/10 space-y-4">
          <div class="flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-green-400">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              <path d="m9 12 2 2 4-4"/>
            </svg>
            <span class="text-blue-100/70 text-sm">Ingenieros colegiados</span>
          </div>
          <div class="flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-green-400">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              <path d="m9 12 2 2 4-4"/>
            </svg>
            <span class="text-blue-100/70 text-sm">Presupuesto gratuito y sin compromiso</span>
          </div>
          <div class="flex items-center gap-3">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-green-400">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              <path d="m9 12 2 2 4-4"/>
            </svg>
            <span class="text-blue-100/70 text-sm">Máxima profesionalidad y garantía</span>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-3">
        <form id="contact-form" class="bg-white rounded-3xl p-8 lg:p-10 shadow-2xl">
          <h3 class="text-xl font-heading font-bold text-gray-900 mb-6">Cuéntanos qué necesitas</h3>
          
          <div class="grid sm:grid-cols-2 gap-5 mb-5">
            <div>
              <label for="nombre" class="block text-sm font-medium text-gray-700 mb-1.5">Nombre completo *</label>
              <input type="text" id="nombre" name="nombre" required class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 outline-none transition-all text-gray-900 placeholder-gray-400" placeholder="Tu nombre" />
            </div>
            <div>
              <label for="telefono" class="block text-sm font-medium text-gray-700 mb-1.5">Teléfono *</label>
              <input type="tel" id="telefono" name="telefono" required class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 outline-none transition-all text-gray-900 placeholder-gray-400" placeholder="Tu teléfono" />
            </div>
          </div>

          <div class="mb-5">
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1.5">Email *</label>
            <input type="email" id="email" name="email" required class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 outline-none transition-all text-gray-900 placeholder-gray-400" placeholder="tu@email.com" />
          </div>

          <div class="mb-5">
            <label for="servicio" class="block text-sm font-medium text-gray-700 mb-1.5">Servicio que necesitas *</label>
            <select id="servicio" name="servicio" required class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 outline-none transition-all text-gray-900 appearance-none bg-white">
              <option value="" disabled selected>Selecciona un servicio</option>
              <option value="certificado-energetico">Certificado Energético (CEE)</option>
              <option value="boletin-electrico">Boletín Eléctrico (CIE)</option>
              <option value="proyectos-licencias">Proyectos y Licencias de Apertura</option>
              <option value="proyectos-electricos">Proyectos Eléctricos</option>
              <option value="instalaciones-electricas">Instalaciones Eléctricas</option>
              <option value="fotovoltaica">Instalaciones Fotovoltaicas</option>
              <option value="punto-recarga">Punto de Recarga Vehículo Eléctrico</option>
              <option value="auditoria-energetica">Auditoría de Eficiencia Energética</option>
              <option value="otro">Otro servicio</option>
            </select>
          </div>

          <div class="mb-5">
            <label for="tipo-cliente" class="block text-sm font-medium text-gray-700 mb-1.5">Soy... *</label>
            <div class="flex gap-4">
              <label class="flex-1 cursor-pointer">
                <input type="radio" name="tipo-cliente" value="particular" class="peer hidden" required />
                <div class="w-full py-3 text-center rounded-xl border-2 border-gray-200 text-gray-600 font-medium peer-checked:border-primary-500 peer-checked:bg-primary-50 peer-checked:text-primary-700 transition-all">
                  Particular
                </div>
              </label>
              <label class="flex-1 cursor-pointer">
                <input type="radio" name="tipo-cliente" value="empresa" class="peer hidden" />
                <div class="w-full py-3 text-center rounded-xl border-2 border-gray-200 text-gray-600 font-medium peer-checked:border-primary-500 peer-checked:bg-primary-50 peer-checked:text-primary-700 transition-all">
                  Empresa
                </div>
              </label>
            </div>
          </div>

          <div class="mb-6">
            <label for="mensaje" class="block text-sm font-medium text-gray-700 mb-1.5">Mensaje</label>
            <textarea id="mensaje" name="mensaje" rows="4" class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 outline-none transition-all text-gray-900 placeholder-gray-400 resize-none" placeholder="Cuéntanos los detalles de tu proyecto o necesidad..."></textarea>
          </div>

          <button type="submit" class="w-full py-4 bg-primary-600 text-white font-bold rounded-xl hover:bg-primary-700 transition-all duration-200 shadow-lg shadow-primary-600/25 hover:shadow-xl hover:-translate-y-0.5 text-lg flex items-center justify-center gap-2">
            Enviar solicitud de presupuesto
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5">
              <path d="M5 12h14"/>
              <path d="m12 5 7 7-7 7"/>
            </svg>
          </button>

          <p class="text-xs text-gray-400 mt-4 text-center">Al enviar aceptas nuestra política de privacidad. No compartimos tus datos con terceros.</p>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const nombre = formData.get('nombre');
    const telefono = formData.get('telefono');
    const email = formData.get('email');
    const servicio = formData.get('servicio');
    const tipoCliente = formData.get('tipo-cliente');
    const mensaje = formData.get('mensaje');
    
    const mailtoBody = `Nombre: ${nombre}%0D%0ATeléfono: ${telefono}%0D%0AEmail: ${email}%0D%0AServicio: ${servicio}%0D%0ATipo: ${tipoCliente}%0D%0A%0D%0AMensaje: ${mensaje}`;
    
    window.location.href = `mailto:sanes.ing@gmail.com?subject=Solicitud de presupuesto - ${servicio}&body=${mailtoBody}`;
    
    // Show success message
    const btn = form.querySelector('button[type="submit"]');
    if (btn) {
      btn.textContent = '¡Mensaje preparado! Revisa tu correo';
      btn.classList.remove('bg-primary-600', 'hover:bg-primary-700');
      btn.classList.add('bg-green-600');
      setTimeout(() => {
        btn.innerHTML = 'Enviar solicitud de presupuesto <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>';
        btn.classList.add('bg-primary-600', 'hover:bg-primary-700');
        btn.classList.remove('bg-green-600');
      }, 3000);
    }
  });
</script>
